<%- include("../partials/header");-%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">
        Edit <%=deck.name%></h1>
          <div style="width: 30%; margin: 30px auto;">
            <form action="/decks/<%=deck._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="group[name]" value="<%= deck.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="group[mobile]" value="<%= deck.mobile %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="group[email]" value="<%= deck.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="group[address]" value="<%= deck.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="group[price]" value="<%= deck.price %>"> min="0.01" step="0.01">
                </div>  

                <div class="form-group">
                    <input class="form-control" type="text" name="group[image]" value="<%= deck.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="group[stock]" value="<%= deck.stock %>"> min="0" step="1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="group[description]" value="<%= deck.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/decks">Go Back</a>
        </div>
            
    </div>
</div>
<%- include("../partials/footer");-%>